//mixin for input

mixin input(items)
  each item in items
    .col-md-4.mb-3
      label(for="validationCustom01")
      .input-group
        .input-group-prepend
          span.input-group-text.basic-addon1.bg-white
            i(class=`${item.icon}`)
        input(type=item.type  class="form-control" id="validationCustom01"  placeholder=item.place required)

//mixin footer
mixin contact(items)
  each item in items
    li.d-block.pb-2
      i.d-inline-block.mr-3(class=item.icon)
      p.d-inline= item.text

mixin open(items)
  each item in items
    li.d-block.pb-2
      div.d-flex.justify-content-between
        p= item.date
        p= item.time


mixin social(items)
  each item in items 
    li.d-inline-block.mr-4
      a(href="#") 
        i(class=`${item}`)  