//mixin header
mixin menu(list)
  each item in list 
    a(href="#").nav-item.nav-link.active.px-3.py-2= item



//mixin food
mixin fooditem(foods)
  each food in foods
    .col-sm-6.col-12.col-lg-4
      .single__food.mt-5
        .food__img.overflow-hidden
          img.img-fluid.img(src=food.img)
        .food__content.p-5
          h5= food.name
          span= food.cost
          p Face together given moveth divided form Of Seasons that fruitful.




